<h1>My Invoices</h1>

<table  class="table table-striped table-dark" >
  <thead>
    <tr>
      <th scope="col">Company</th>
      <th scope="col">Contragent</th>
      <th scope="col">Amount</th>
      <th scope="col">Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.company %></td>
        <td><%= invoice.contragent %></td>
        <td><%= invoice.amount %> <%= invoice.currency %></td>
        <td><%= invoice.date %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-dark"><%= link_to 'New Invoice', new_invoice_path %></button>
